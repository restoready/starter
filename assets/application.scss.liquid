// ==============================================================================
// #Forms
// ==============================================================================
.button,
button,
input[type="text"],
input[type="search"],
input[type="password"],
input[type="email"],
input[type="file"],
input[type="number"],
input[type="tel"],
input[type="submit"],
textarea {
  -webkit-appearance: none;
  -moz-appearance: none;
}

input,
textarea,
select,
fieldset {
  max-width: 100%;
}

input,
select,
textarea {
  font-size: 1em;
  line-height: 1.42;
  margin: 0;
  padding: .2rem;
}

input {
  display: inline-block;
  width: auto;
}

button,
input[type="submit"] {
  cursor: pointer;
}

/* Input width and border */
input[type="text"],
input[type="search"],
input[type="password"],
input[type="email"],
input[type="file"],
input[type="number"],
input[type="tel"],
textarea,
select {
  border: 1px solid $default-field-border-color;
  display: block;
  max-width: 100%;
  width: 100%;
  &:focus {
    border-color: $default-field-focus-border-color;
  }
}

textarea {
  min-height: 100px;
}

input[type="checkbox"],
input[type="radio"] {
  display: inline;
  margin: 0;
}

select {
  -webkit-appearance: none;
     -moz-appearance: none;
          appearance: none;
  background: {
    image: url("data:image/svg+xml;base64,"); // svg base64 encoded arrow
    repeat: no-repeat;
    position: right 10px center;
    color: #fff;
  }
  padding-right: 28px;
  text-indent: 0.01px;
  text-overflow: '';

  // Hide the svg arrow in IE9 and below
  .ie9 &,
  .lt-ie9 & {
    padding-right: 10px;
    background-image: none;
  }
}

select::-ms-expand {
    display: none;
}

/* Form labels */
label,
legend {
  display: block;
  margin-bottom: 2px;
}

label[for] {
  cursor: pointer;
}

/* Horizontal Form */
form.form-horizontal,
.form-horizontal {
  margin-bottom: 0;

  input[type="text"],
  input[type="search"],
  input[type="password"],
  input[type="email"],
  input[type="file"],
  input[type="number"],
  input[type="tel"],
  textarea,
  select,
  label {
    display: inline-block;
    margin-bottom: 0;
    width: auto;
  }
}


// ==============================================================================
// #Links and Buttons
// ==============================================================================
.button {
  display: inline-block;
  padding: .25rem 1rem;
  margin: 0;
  font-size: 0.95em;
  line-height: 1.42;
  text-decoration: none;
  text-align: center;
  vertical-align: middle;
  white-space: nowrap;
  cursor: pointer;
  -webkit-user-select: none;
  -moz-user-select:    none;
  -ms-user-select:     none;
  -o-user-select:      none;
  user-select:         none;
  -webkit-appearance: none;
  border: 0;
  background-color: $button-background;
  color: $button-color;
  transition: color .25s, background-color .25s;

  &.button--small {
    padding: 4px 5px;
    font-size: 0.75em;
  }

  &.button--full {
    width: 100%;
  }

  &:hover,
  &:active,
  &:focus {
    background-color: $button-hover-background;
    color: $button-hover-color;
  }

  &[disabled],
  &.disabled {
    cursor: default;
  }
}


// ==============================================================================
// #Breakpoints
// ==============================================================================

// Medium
@include at-query($min, $small) {
  body,
  input,
  textarea,
  button,
  select {
    font-size: 112.5%;
  }

  .button--ribbon {
    font-size: 24px;
    width: 16rem;
  }
}

// Large
@include at-query($min, $medium) {
  body,
  input,
  textarea,
  button,
  select {
    font-size: 125%;
  }

  .page section {
    padding: 3rem 0;
  }

  .opening-days, .opening-hours__information {
    margin: 0 auto 1.5rem;
    width: 24rem;
  }
}

// > Large
@include at-query($min, $siteWidth) {
  .restaurant-name {
    font-size: 4em;
    margin-bottom: 0;
  }

  .slogan__description {
    font-size: 1.5em;
  }

  .page section {
    padding: 6rem 0;
  }

  .footer__social {
    float: left;
    text-align: left;
    width: 49.9%;
  }
    .social__item {
      margin-top: 0;
      margin-bottom: 0;
      &:first-child {
        margin-left: 0;
      }
    }
      .social__link {
        font-size: .85em;
      }
  .footer__legal {
    float: right;
    text-align: right;
    width: 49.9%;
  }
      .legal__link {
        font-size: .85em;
      }

  .opening-hours .section__title,
  .directions .section__title {
    font-size: 3em;
  }

}
