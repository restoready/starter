  width: 12rem;
  &:hover, &:focus {
   background-color: $button-hover-background;
   color: $button-hover-color;
 }
}
.button--ribbon:before, .button--ribbon:after {
  border: 1em solid darken($button-background, 20%);
  bottom: -.75em;
  content: "";
  display: block;
  position: absolute;
  z-index: -1;
}
.button--ribbon:before {
  border-right-width: 1em;
  border-left-color: transparent;
  left: -1.25em;
}
.button--ribbon:after {
  border-left-width: 1em;
  border-right-color: transparent;
  right: -1.25em;
}
.button--ribbon .ribbon-content:before, .button--ribbon .ribbon-content:after {
  border-color: darken($button-background, 33%) transparent transparent transparent;
  border-style: solid;
  bottom: -.75em;
  content: "";
  display: block;
  position: absolute;
}
