    <div class="tab-body" id="tab-body-3">
      <fieldset>
        <legend>Communication</legend>
        <div class="small-12 medium-6 large-6 columns">
          {% if theme_settings.footer_display_newsletter %}
            <input class="icheck-me" name="admin_theme_settings[footer_display_newsletter]" id="footer_display_newsletter" type="checkbox" value="{{ theme_settings.footer_display_newsletter }}" data-skin='black-green' checked/>
          {% else %}
            <input class="icheck-me" name="admin_theme_settings[footer_display_newsletter]" id="footer_display_newsletter" type="checkbox" value="{{ theme_settings.footer_display_newsletter }}" data-skin='black-green' />
          {% endif %}
          <label style="margin-right:.5em;" for="footer_display_newsletter">Afficher la newsletter</label>
        </div>

        <div class="small-12 medium-6 large-6 columns end">
          {% if theme_settings.display_contact_form %}
            <input class="icheck-me" name="admin_theme_settings[display_contact_form]" id="display_contact_form" type="checkbox" value="{{ theme_settings.display_contact_form }}" data-skin='black-green' checked/>
          {% else %}
            <input class="icheck-me" name="admin_theme_settings[display_contact_form]" id="display_contact_form" type="checkbox" value="{{ theme_settings.display_contact_form }}" data-skin='black-green' />
          {% endif %}
          <label style="margin-right:.5em;" for="display_contact_form">Afficher le formulaire de contact</label>
        </div>
      </fieldset>

      <fieldset>
        <legend>Carte Google</legend>
        <div class="small-12 medium-6 large-6 columns">
          <input class="icheck-me" name="admin_theme_settings[google_map_type]" id="radio_google_none" type="radio" value="" data-skin='black-green' {% if theme_settings.google_map_type == "" %}checked{% endif %}/>
          <label style="margin-right:.5em;" for="radio_google_none">Ne pas afficher la carte</label>
          <input class="icheck-me" name="admin_theme_settings[google_map_type]" id="radio_google_map_image" type="radio" value="image" data-skin='black-green' {% if theme_settings.google_map_type == "image" %}checked{% endif %}/>
          <label style="margin-right:.5em;" for="radio_google_map_image">Afficher la carte sous forme d'image</label>
          <input class="icheck-me" name="admin_theme_settings[google_map_type]" id="radio_google_map_embed" type="radio" value="embed" data-skin='black-green' {% if theme_settings.google_map_type == "embed" %}checked{% endif %}/>
          <label style="margin-right:.5em;" for="radio_google_map_embed">Afficher la carte interactive</label>
