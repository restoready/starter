{% newsletter_subscribe_form %}
          <div class="message message--error">
            <div class="message__description">
              <p>
                <i class="icon icon-warning"></i>
                {{ "Veuillez corriger les erreurs mentionnées ci-dessous :" | t }}
              </p>
            </div>
          </div>

  <div class="o-wrapper">
    <section class="o-form c-newsletter-form">
      <h1 class="o-form__title">{{ "Inscription à la newsletter" | t }}</h1>
      {% unless form.created_successfully? %}
      {% endunless %}
      <fieldset class="o-form__field-group">
        <div class="o-form__input">
          <label class="o-form__label" for="subscriberEmail">{{ "Abonnez-vous à notre newsletter pour recevoir les dernières nouveautés du restaurant&nbsp;:" | t }}</label>
          <input id="subscriberEmail" name="subscriber[email]" type="text">
          {% unless form.created_successfully? %}
            <div class="o-form__input-hint o-form__input-hint--error">
              {{ form.error }}
            </div>
          {% endunless %}
        </div>
        <div class="o-form__submit">
          <button class="o-button o-button--red has-icon" type="submit">
            <i class="icon icon-check"></i> {{ "Valider" | t }}
          </button>
        </div>
      </fieldset>
    </section>
  </div>
{% endnewsletter_subscribe_form %}
