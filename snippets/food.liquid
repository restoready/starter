<div class="c-food {% if food.featured_in_menu? %}c-food--featured{% endif %} {{ food.auto_css_classes }}" id="food-{{food.id}}">

  {% if food.main_image? %}
    {{ food.main_image | custom_image_url:'100x100#' | image_tag:'class:c-food__img' }}
  {% endif %}

  <div class="c-food__body">
    <h5 class="c-food__title">
      {% if food.featured_in_menu? %}
        <i class="icon icon-star"></i>
      {% endif %}
      {{ food.name }}
    </h5>

    {% if food.tags? %}
      <div class="c-food__tags">
        {% for tag in food.tags %}
          <i class="c-food__tag tag--{{ tag.css_class }}">{{ tag.name }}</i>
        {% endfor %}
      </div>
    {% endif %}

    {% if food.summary? %}
      <div class="c-food__summary">
        {{ food.summary }}
      </div>
    {% endif %}

    {% if prices.size > 0 %}
      <div class="c-food__prices">
        <ul class="c-food__prices-items">
          {% for price in prices %}
          <li class="c-food__prices-item">
            <span class="c-food__prices-label">{{ price.title }}</span>
            <span class="c-food__prices-value">{{ price.amount | money }}</span>
          </li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}
  </div>
</div>

<hr class="c-food__separator">
